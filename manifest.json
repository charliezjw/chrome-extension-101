{
  "manifest_version": 3,
  "name": "Word Frequency Counter",
  "version": "1.0",
  "description": "Counts and displays the highest frequency word of each tab.",
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
